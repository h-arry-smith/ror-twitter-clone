<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="fw-bold text-primary mt-5">
                blabber.
            </h1>

            <h2>Log in</h2>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="mb-3 form-floating">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "hello@email.com", class: "form-control" %>
                    <%= f.label :email %>
                </div>

                <div class="mb-3 form-floating">
                    <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "form-control" %>
                    <%= f.label :password %>
                </div>

                <% if devise_mapping.rememberable? %>
                    <div class="mb-3">
                        <%= f.check_box :remember_me, class: "form-check-input" %>
                        <%= f.label :remember_me, class: "form-check-label" %>
                    </div>
                <% end %>

                <div class="">
                    <%= f.submit "Log in", class: "btn btn-primary" %>
                </div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
